% Dictates which colours are used
\ProvidesPackage{beamercolorthememinimal}

\mode<presentation>
% Define Colours
\definecolor{maincolor}{RGB}{35, 18, 108}
\definecolor{glassgrey}{rgb}{220,220,220}

% Set Colours
\setbeamercolor{title}{parent=maincolor}
\setbeamercolor{title}{fg=maincolor}
\setbeamercolor{subtitle}{parent=maincolor}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=maincolor}
\setbeamercolor{institute}{parent=maincolor}

\setbeamercolor{section title}{parent=maincolor}
\setbeamercolor{subsection title}{parent=maincolor}
\setbeamercolor{frametitle}{parent=maincolor}
\setbeamercolor{background canvas}{parent=maincolor}
\setbeamercolor{structure}{fg=maincolor}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
\setbeamercolor{page number in head/foot}{fg=maincolor}

\setbeamercolor{alerted text}{fg=maincolor}

\mode
<all>